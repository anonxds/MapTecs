<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unilist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/tecnm" />

        <TextView
            android:id="@+id/txtinformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione Modulo"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="5sp" />

        <ImageView
            android:id="@+id/logotec"
            android:layout_width="1dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:src="@drawable/itt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp">

        <ImageButton
            android:id="@+id/btntomas"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:onClick="tomas"
            android:scaleType="centerCrop"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Tomas Aquino \n Av Castillo de Chapultepec 562, Tomas Aquino, 22414 Tijuana, B.C."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="6sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btnotay"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:onClick="otay"
            android:scaleType="centerCrop"
            android:src="@drawable/otay" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="46dp"
            android:text="Otay \n Blvd. Industrial s/n, Cd Industrial, 22430 Tijuana, B.C."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="6sp" />
    </LinearLayout>
</LinearLayout>
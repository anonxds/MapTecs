<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unilist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="10dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:src="@drawable/tecnm" />

        <TextView
            android:id="@+id/txtinformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione Modulo"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/logotec"
            android:layout_width="8dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:src="@drawable/itt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="96dp"
            android:layout_height="52dp"
            android:text="@string/tomas"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="8sp" />

        <ImageButton
            android:id="@+id/btntomas"
            android:layout_width="87dp"
            android:layout_height="52dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#C2DD6A">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="98dp"
            android:layout_height="42dp"
            android:text="Otay \n Blvd. Industrial s/n, Cd Industrial, 22430 Tijuana, B.C."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="8sp" />

        <ImageButton
            android:id="@+id/btnotay"
            android:layout_width="83dp"
            android:layout_height="43dp"
            android:scaleType="centerCrop"
            android:src="@drawable/otay" />
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unilist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="10dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:src="@drawable/tecnm" />

        <TextView
            android:id="@+id/txtinformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione Modulo"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/logotec"
            android:layout_width="8dp"
            android:layout_height="78dp"
            android:layout_weight="1"
            android:src="@drawable/itt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="263dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Tomas Aquino \n Av Castillo de Chapultepec 562, Tomas Aquino, 22414 Tijuana, B.C."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btntomas"
            android:layout_width="225dp"
            android:layout_height="211dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="311dp"
        android:background="#C2DD6A">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="121dp"
            android:layout_marginTop="60dp"
            android:text="Otay \n Blvd. Industrial s/n, Cd Industrial, 22430 Tijuana, B.C."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnotay"
            android:layout_width="241dp"
            android:layout_height="221dp"
            android:scaleType="centerCrop"
            android:src="@drawable/otay" />
    </LinearLayout>

</LinearLayout>

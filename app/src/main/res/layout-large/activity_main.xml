<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unilist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="10dp"
            android:layout_height="86dp"
            android:layout_weight="1"
            android:src="@drawable/tecnm" />

        <TextView
            android:id="@+id/txtinformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Seleccione Modulo"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/logotec"
            android:layout_width="8dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:src="@drawable/itt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="80dp"
            android:text="@string/tomas"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="19sp" />

        <ImageButton
            android:id="@+id/btntomas"
            android:layout_width="268dp"
            android:layout_height="242dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:onClick="tomas"
            android:src="@drawable/home" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="374dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#C2DD6A">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="100dp"
            android:text="@string/otay"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="19sp" />

        <ImageButton
            android:id="@+id/btnotay"
            android:layout_width="284dp"
            android:layout_height="244dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:onClick="otay"
            android:src="@drawable/otay" />
    </LinearLayout>

</LinearLayout>
